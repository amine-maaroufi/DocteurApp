<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_signup"
    tools:context="com.androidapplication.amine.docteurapp.Profil_Activity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="20dp">


            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Sign Up"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView

                    android:id="@+id/tvsignuptext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="SIGN UP"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!--app:oval="true"-->
            </RelativeLayout>
            <!--<Spinner-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_below="@+id/relativeLayout1"-->
            <!--android:id="@+id/spinner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->


            <EditText
                android:id="@+id/updatefisrtname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/relativeLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:alpha=".9"
                android:ems="10"
                android:hint="Fist name"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#fff"

                android:textSize="15dp" />

            <EditText
                android:id="@+id/updatelastname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/updatefisrtname"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:alpha=".9"
                android:ems="10"
                android:hint="Last name"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#fff"

                android:textSize="15dp" />


            <EditText
                android:id="@+id/updateusername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updatelastname"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:alpha=".9"
                android:ems="10"
                android:hint="Username"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#fff"
                android:textSize="15dp"></EditText>


            <TextView
                android:id="@+id/tvpassworduser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Password:-"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText

                android:id="@+id/updatepassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updateusername"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:alpha=".9"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#fff"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/updateconfirm_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updatepassword"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:alpha=".9"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#fff"
                android:textSize="15dp"></EditText>

            <TextView
                android:id="@+id/tvemailuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvpassworduser"
                android:layout_below="@+id/tvpassworduser"
                android:layout_marginTop="25dp"
                android:text="Email:-"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/updateemail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updateconfirm_password"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:alpha=".9"
                android:ems="10"
                android:hint="Email"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#fff"
                android:textSize="15dp"></EditText>

            <TextView
                android:id="@+id/tvphoneuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvemailuser"
                android:layout_below="@+id/tvemailuser"
                android:layout_marginTop="25dp"
                android:alpha=".9"
                android:text="Phone:-"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText

                android:id="@+id/updatephone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/updateemail"
                android:layout_below="@+id/updateemail"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:alpha=".9"
                android:ems="12"
                android:hint="Phone number"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#fff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnupdate"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/updatephone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_loginbtn"
                android:clickable="true"

                android:text="Save"
                android:textColor="#ffffff" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>
