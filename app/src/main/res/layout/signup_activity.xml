<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/bg_signup"
tools:context="com.androidapplication.amine.docteurapp.Signup_Activity">

<!--<include-->

<!--android:id="@+id/tool_bar"-->
<!--layout="@layout/toolbar_back"></include>-->


<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="20dp">


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Sign Up"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView

                android:visibility="gone"
                android:id="@+id/tvsignuptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="SIGN UP"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!--app:oval="true"-->
        </RelativeLayout>
        <!--<Spinner-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_below="@+id/relativeLayout1"-->
        <!--android:id="@+id/spinner"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--/>-->


        <EditText
            android:textSize="15dp"
            android:alpha=".9"
            android:id="@+id/etsignupfisrtname"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Fist name"
            android:singleLine="true"

            android:textColorHint="#fff" />

        <EditText
            android:textSize="15dp"
            android:alpha=".9"
            android:id="@+id/etsignuplastname"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/etsignupfisrtname"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Last name"
            android:singleLine="true"

            android:textColorHint="#fff" />


        <EditText
            android:textSize="15dp"
            android:alpha=".9"
            android:id="@+id/etsignupusername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etsignuplastname"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Username"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#fff"></EditText>


        <TextView
            android:id="@+id/tvpassworduser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Password:-"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText

            android:textSize="15dp"
            android:alpha=".9"
            android:id="@+id/etsignuppassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etsignupusername"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#fff"></EditText>
        <EditText
            android:textSize="15dp"
            android:alpha=".9"
            android:id="@+id/et_confirm_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etsignuppassword"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#fff"></EditText>

        <TextView
            android:id="@+id/tvemailuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvpassworduser"
            android:layout_below="@+id/tvpassworduser"
            android:layout_marginTop="25dp"
            android:text="Email:-"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:textSize="15dp"
            android:alpha=".9"
            android:id="@+id/etsignupemail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_confirm_password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Email"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#fff"></EditText>

        <TextView
            android:textSize="15dp"
            android:alpha=".9"
            android:id="@+id/tvphoneuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvemailuser"
            android:layout_below="@+id/tvemailuser"
            android:layout_marginTop="25dp"
            android:text="Phone:-"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText

            android:inputType="phone"
            android:textSize="15dp"
            android:alpha=".9"
            android:id="@+id/etsignupphone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etsignupemail"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="12"
            android:hint="Phone number"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#fff"
            android:layout_alignLeft="@+id/etsignupemail"
            android:layout_alignStart="@+id/etsignupemail"></EditText>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/spiner_lay"
            android:layout_below="@+id/etsignupphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView

                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"
                android:src="@drawable/spinner" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnsignupformm"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/spiner_lay"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_sign_upbtn"
            android:clickable="true"

            android:text="SignUp"
            android:textColor="#ffffff" />


    </RelativeLayout>
</ScrollView>

</LinearLayout>